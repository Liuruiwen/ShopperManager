<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLine"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_user"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="30dp"
        android:background="@color/colorWrite"
        tools:ignore="MissingConstraints">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/gouwu_nav_bg9_default"
            android:id="@+id/iv_header"
            tools:ignore="MissingConstraints" />
        <TextView
            android:textColor="@color/textMain"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:id="@+id/tv_account"
            app:layout_constraintTop_toTopOf="@id/iv_header"
            app:layout_constraintLeft_toRightOf="@id/iv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1333333333"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:textColor="@color/textMain"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:id="@+id/tv_nickname"
            app:layout_constraintTop_toBottomOf="@id/tv_account"
            app:layout_constraintLeft_toRightOf="@id/iv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="高级店员"
            tools:ignore="MissingConstraints"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_right"
            app:layout_constraintTop_toTopOf="@id/iv_header"
            app:layout_constraintBottom_toBottomOf="@id/iv_header"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/textMain"
            android:id="@+id/tv_desc"
            android:background="@color/colorWrite"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_header"
            tools:text="职责：协助店长处理店内事物"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/layout_employess"
        app:layout_constraintTop_toBottomOf="@id/layout_user"
        android:background="@color/colorWrite"
        tools:ignore="MissingConstraints">




        <TextView
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="员工管理"
            android:textSize="16sp"
            android:id="@+id/tv_employees"
            android:textColor="@color/textMain"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:background="@color/colorWrite"
            android:layout_width="match_parent"
            android:layout_height="55dp"

            />
        <View
            android:layout_width="match_parent"
            android:background="@color/colorLine"
            android:id="@+id/line_employees"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_employees"
            android:layout_height="0.5dp"/>

        <TextView
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="店铺地址"
            android:textSize="16sp"
            android:id="@+id/tv_address"
            android:textColor="@color/textMain"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:background="@color/colorWrite"
            app:layout_constraintTop_toBottomOf="@id/line_employees"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="设置"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_set"
        android:textColor="@color/textMain"
        android:drawableRight="@drawable/ic_right"
        android:gravity="center_vertical"
        android:background="@color/colorWrite"
        app:layout_constraintTop_toBottomOf="@id/layout_employess"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>