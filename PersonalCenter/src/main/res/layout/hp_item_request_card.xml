<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textColor="@color/textLight"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_card_time"
        tools:text="2022-03-14 23:01:43"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_card_time"
        android:textColor="@color/textLight"
        android:layout_marginTop="6dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_absenteeism_time"
        tools:text="2022-03-14"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textColor="@color/textMain"
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        tools:text="1882686640"
        android:id="@+id/tv_account"
        app:layout_constraintTop_toBottomOf="@id/tv_absenteeism_time"
        tools:ignore="MissingConstraints" />


        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="@string/pc_delete"
            android:id="@+id/tv_delete"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_marginTop="8dp"
            android:paddingRight="50dp"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textColor="@color/colorWrite"
            android:gravity="center"
            android:id="@+id/tv_approval"
            android:background="@drawable/pc_button_bg_blue"
            android:text="@string/pc_approval"
            />



    <View
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_approval"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorLine"
        />
</androidx.constraintlayout.widget.ConstraintLayout>