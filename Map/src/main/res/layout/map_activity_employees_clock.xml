<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EmployeesClockActivity">
    <com.amap.api.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:background="@color/colorWrite"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_go_clock"
            android:layout_width="match_parent"
            android:textSize="14dp"
            tools:text="上班卡"
            android:textColor="@color/textLight"
            android:padding="16dp"
            android:layout_height="wrap_content"
            />
        <TextView
            tools:text="打上班卡"
            android:textColor="@color/colorWrite"
            android:layout_marginRight="16dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_go_clock"
            app:layout_constraintBottom_toBottomOf="@id/tv_go_clock"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="12dp"
            android:id="@+id/tv_clock_work"
            android:background="@drawable/map_button_bg_blue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            />
        <View
            app:layout_constraintTop_toBottomOf="@id/tv_go_clock"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/line"
            android:background="@color/color_F9F9F9"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/line"
            android:id="@+id/tv_after_clock"
            android:layout_width="match_parent"
            android:textSize="14dp"
            tools:text="下班卡"
            android:textColor="@color/textLight"
            android:padding="16dp"
            android:layout_height="wrap_content"
            />
        <TextView
            tools:text="打下班卡"
            android:textColor="@color/colorWrite"
            android:layout_marginRight="16dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_after_clock"
            app:layout_constraintBottom_toBottomOf="@id/tv_after_clock"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="12dp"
            android:id="@+id/tv_clock_after_work"
            android:background="@drawable/map_button_bg_blue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>