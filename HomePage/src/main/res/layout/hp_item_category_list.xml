<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorWrite"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_position"
            tools:text="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/hp_button_bg_blue"
            tools:ignore="MissingConstraints" />

        <TextView
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_position"
            app:layout_constraintRight_toLeftOf="@id/iv_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_category_name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:textColor="@color/textMain"
            tools:text="分类名分"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/textLight"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@id/tv_category_name"
            app:layout_constraintStart_toStartOf="@id/tv_category_name"
            app:layout_constraintEnd_toEndOf="@id/tv_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_category_desc"
            tools:text="分类名分类名分类名称分类名称分类名称称分类名分类名称分类名称分类名称称分类名称分类名称分类名称称"
            />

        <ImageView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_category_name"
            android:id="@+id/iv_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hp_ic_video_material_download_normal"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>