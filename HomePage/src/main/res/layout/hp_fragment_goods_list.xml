<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWrite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14dp"
        android:background="@drawable/hp_button_bg_blue"
        android:layout_width="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorWrite"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="10dp"
        android:text="@string/hp_add_goods"
        android:layout_height="wrap_content"
        android:id="@+id/tv_add_goods"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_margin="16dp"
        android:textSize="14dp"
        android:background="@drawable/hp_button_bg_blue"
        android:layout_width="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorWrite"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_add_goods"
        android:text="@string/hp_goods_position"
        android:layout_height="wrap_content"
        android:id="@+id/tv_goods_position"
        tools:ignore="MissingConstraints" />
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/tv_add_goods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rv_goods"
        />
    <include
        android:id="@+id/goods_empty"
        android:visibility="gone"
        layout="@layout/hp_empty_state"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>