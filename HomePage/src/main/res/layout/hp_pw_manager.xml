<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/hp_dialog_bg_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView

        android:textStyle="bold"
        android:textColor="@color/textMain"
        android:textSize="14sp"
        android:text="添加品类"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/tv_add_category"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintRight_toRightOf="@id/tv_add_category"
        app:layout_constraintTop_toBottomOf="@id/tv_add_category"
        android:background="@color/colorLine"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/view_line"
        android:textStyle="bold"
        android:textColor="@color/textMain"
        android:textSize="14sp"
        android:text="管理品类"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/tv_manager_category"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>